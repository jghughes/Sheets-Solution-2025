{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "none",
    "target": "ES6",
    "lib": [ "es2016" ],
    "types": [ "google-apps-script" ],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [ "src/**/*.ts" ]
}